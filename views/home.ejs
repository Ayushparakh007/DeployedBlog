
<%- include("partials/header"); -%>

    <h1>Home</h1>
    <p> <%= startingContent %> </p>


  <%  posts.forEach(function(post){ %>

    <div class="post-preview">
        <h1><%=post.title%></h1>
        <p>
        <%=post.content%>
        </p>
        
        <div class="post-actions" style="display: none;">
            <a href="/posts/<%=post._id%>" class="btn btn-primary btn-sm">Read More</a>
            <a href="/posts/<%=post._id%>/edit" class="btn btn-warning btn-sm">Edit</a>
            
            <form action="/posts/<%=post._id%>/delete" method="post" style="display: inline-block; margin-left: 5px;">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this post?')">
                    Delete
                </button>
            </form>
        </div>
    </div>

    <% }) %>


<%- include("partials/footer"); -%>
